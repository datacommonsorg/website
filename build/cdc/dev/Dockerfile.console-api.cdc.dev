# Development Dockerfile for Custom Data Commons python webserver

# Use official Python runtime as a parent image
FROM python:3.12-slim

# Set the working directory in the container
WORKDIR /app

# Copy python requirements file
COPY custom_dc/packages/ /app/packages

# Create the python virtual environment and install dependencies
RUN python3 -m venv /app/.env \
    && /app/.env/bin/pip install --upgrade pip

# Install dependencies
RUN cd /app/packages/datacommons-console-api/ && /app/.env/bin/pip install -r requirements.txt
RUN pip install /app/packages/datacommons-console-api/

# Expose port 7070 for the Flask app
EXPOSE 8070

# Set the command to run the Flask app
CMD ["/app/.env/bin/datacommons-console-api", "start"]
