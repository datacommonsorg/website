## This file specifies the config for topic page


overview_block {
  description: "Some intro text about poverty. … "
  stat_var_metadata {
    stat_vars: "Count_Person_BelowPovertyLevelInThePast12Months"
    denominator: "Count_Person"
  }
  left_tiles: {
    type: HIGHLIGHT
    description: "of Americans lived under the poverty line (${date})"
  }
  right_tiles: {
    type: LINE
    title: "Poverty rate in ${place}"
  }
}

blocks {
  title: "Poverty across states"
  stat_var_metadata {
    stat_vars: "Count_Person_BelowPovertyLevelInThePast12Months"
    denominator: "Count_Person"
    unit: "%"
    scaling: 100
  }
  left_tiles {
    type: MAP
    title: "Poverty across states (${date})"
  }
  right_tiles {
    type: RANKING
    ranking_metadata {
      show_highest: true
      show_lowest: true
      show_increase: true
      show_decrease: true
      diff_base_date: "2014"
    }
  }
}

blocks {
  title: "Poverty by race"
  stat_var_metadata {
    stat_vars: "Count_Person_BelowPovertyLevelInThePast12Months_AmericanIndianOrAlaskaNativeAlone"
    stat_vars: [
      "Count_Person_BelowPovertyLevelInThePast12Months_AmericanIndianOrAlaskaNativeAlone",
      "Count_Person_BelowPovertyLevelInThePast12Months_AsianAlone",
      "Count_Person_BelowPovertyLevelInThePast12Months_BlackOrAfricanAmericanAlone",
      "Count_Person_BelowPovertyLevelInThePast12Months_HispanicOrLatino",
      "Count_Person_BelowPovertyLevelInThePast12Months_NativeHawaiianOrOtherPacificIslanderAlone",
      "Count_Person_BelowPovertyLevelInThePast12Months_WhiteAlone"
    ]
    denominator: [
      "Count_Person_AmericanIndianOrAlaskaNativeAlone",
      "Count_Person_AsianAlone",
      "Count_Person_BlackOrAfricanAmericanAlone",
      "Count_Person_HispanicOrLatino",
      "Count_Person_NativeHawaiianOrOtherPacificIslanderAlone",
      "Count_Person_WhiteAlone"
    ]
    scaling: 100
    unit: "%"
  }
  left_tiles {
    type: LINE
    title: "Poverty rate by race in ${place}"
  }
  left_tiles {
    type: BAR
    title: "Poverty rate by race across states in ${place}"
  }
  right_tiles {
    type: RANKING
    description: "Some note about how US Census defines race…"
    ranking_metadata {
      show_highest: true
    }
  }
}


